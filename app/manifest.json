{
    "name": "TorrentRex",
    "version": "1.0.0",
    "manifest_version": 2,
    "description": "The torrent predator, feared all around the universe.",
    //"default_locale": "es",
    "icons": {
        "128": "icon128.png"
    },
    "browser_action": {
        "default_icon": {
            "19": "images/defaultIcon19x19.png",
            "38": "images/defaultIcon38x38.png"
        },
        "default_popup": "index.html",
        "default_title": "Torrent Rex"
    },
    "background": {
        "scripts": ["scripts/events.js"],
        "persistent": true
    },
    "minimum_chrome_version": "18",
    "permissions": [
        "downloads",
        "storage",
        "alarms",
        "notifications",
        "http://trex-lovehinaesp.rhcloud.com/api/tx/*",
        "http://txibitsoft.com/*"
    ]
}